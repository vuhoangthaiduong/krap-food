    <li class="menu-item">
      <a href="<%= business_root_url %>"> <span><i class="fas fa-star fs-16"></i><%= t("business.shared.sidebar.customers_review") %></span>
      </a>
    </li>
    <!-- Customers  end -->
    <!-- sales -->
    <li class="menu-item">
      <a href="pages/sales.html"> <span><i class="fa fa-briefcase fs-16"></i><%= t("business.shared.sidebar.promos") %></span>
