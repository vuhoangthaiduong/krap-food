      </a>
    </li>
    <!-- /Dashboard -->
    <!-- product -->
    <li class="menu-item">
      <a href="#" class="has-chevron" data-toggle="collapse" data-target="#product" aria-expanded="false" aria-controls="product"> <span><i class="fa fa-archive fs-16"></i><%= t("business.shared.sidebar.menu") %></span>
      </a>
      <ul id="product" class="collapse" aria-labelledby="product" data-parent="#side-nav-accordion">
