        <li> <%= link_to t("business.shared.sidebar.add_product"), new_business_food_path() %>
        </li>
      </ul>
    </li>
    <!-- product end -->
    <!-- orders -->
    <li class="menu-item">
      <a href="pages/orders.html"> <span><i class="fas fa-clipboard-list fs-16"></i><%= t("business.shared.sidebar.orders") %></span>
